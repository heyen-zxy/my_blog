<div class="panel-group col-md-10" id="accordion" >
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseOne<%= @class_mate.id %>"><i><small>为防止信息泄露,对个人信息做了隐藏,修改个人信息时,请去除 * ,填写真实内容</small></i></a>

          <span  style="float: right;">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseOne<%= @class_mate.id %>">我要参加</a>
          </span>
      </h4>
    </div>
    <div id="collapseOne<%= @class_mate.id %>" class="panel-collapse collapse">
      <div class="panel-body">
        <%= form_for @class_mate, url: class_mates_path do |f| %>

            <div class="control-group form-group">
              <div class="controls">
                <label>姓名:</label>
                <%= f.text_field :name, class: "form-control" %>
              </div>
              <div class="controls">
                <label>手机号码:</label>
                <%= f.text_field :tel, class: "form-control" %>
              </div>
              <div class="controls">
                <label>参会人数:</label>
                <%= f.text_field :number, class: "form-control" %>
              </div>
            </div>
            <div id="success"></div>
            <!-- For success/fail messages -->
            <%= f.submit '添加', class: 'btn btn-primary'%>
        <% end %>
      </div>
    </div>
  </div>
  <!-- First Blog Post -->
  <% @class_mates.each do |class_mate| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseOne<%= class_mate.id %>"><%= class_mate.hide.name %></a>
          <span  style="float: right;">

          </span>
          </h4>
        </div>
        <div id="collapseOne<%= class_mate.id %>" class="panel-collapse collapse">
          <div class="panel-body">
            <%= form_for class_mate.hide, url: class_mate_path(class_mate) do |f| %>
                <div class="control-group form-group">
                  <div class="controls">
                    <label>姓名:</label>
                    <%= f.text_field :name, class: "form-control" %>
                  </div>
                  <div class="controls">
                    <label>手机号码:</label>
                    <%= f.text_field :tel, class: "form-control" %>
                  </div>
                  <div class="controls">
                    <label>参会人数:</label>
                    <%= f.text_field :number, class: "form-control" %>
                  </div>
                </div>
                <div id="success"></div>
                <!-- For success/fail messages -->
                <%= f.submit '修改', class: 'btn btn-primary'%>
            <% end %>
          </div>
        </div>
      </div>
  <% end %>
</div>

