

<!-- Content Row -->


  <!-- Blog Post Content Column -->
  <div class="col-lg-8">
    <h1><%= @blog.title %></h1>
    <hr>
    <div class="markdown">
      <%= markdown @blog.content %>
    </div>

    <br/>

    <!-- Date/Time -->
    <p><i class="fa fa-clock-o"></i> <%= @blog.created_at.strftime(' %B %-d, %Y') %></p>



  </div>